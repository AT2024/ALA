# =================================================================
# ALA Production Environment Configuration
# =================================================================
# This file contains production environment variables for both
# backend and frontend services. 
# IMPORTANT: Override sensitive values in .env.local (git-ignored)

# =================================================================
# BACKEND CONFIGURATION
# =================================================================

# Database Configuration (use actual production values)
DATABASE_URL=postgres://username:password@host:5432/database_name
ENABLE_SSL=true

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_ENV_LOCAL
JWT_EXPIRES_IN=24h

# Priority System Integration
PRIORITY_URL=https://t.eu.priority-connect.online/odata/Priority/tabbtbc6.ini/test24
PRIORITY_USERNAME=CHANGE_THIS_IN_PRODUCTION
PRIORITY_PASSWORD=CHANGE_THIS_IN_PRODUCTION
SYNC_WITH_PRIORITY=true

# =================================================================
# FRONTEND CONFIGURATION (VITE)
# =================================================================

# API Configuration (relative URL for production)
VITE_API_URL=/api
VITE_PRIORITY_API_URL=https://t.eu.priority-connect.online/odata/Priority/tabbtbc6.ini/test24

# Application Configuration
VITE_ENVIRONMENT=production
VITE_OFFLINE_STORAGE=true

# =================================================================
# PRODUCTION SECURITY SETTINGS
# =================================================================

# Additional production-only configurations
LOG_LEVEL=info
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=https://your-production-domain.com