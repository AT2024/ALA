# =================================================================
# ALA Docker Configuration
# =================================================================
# Docker-specific environment variables for both development and production
# This file is used by docker-compose.yml and override files

# =================================================================
# DOCKER COMPOSE CONFIGURATION
# =================================================================

# Project naming (used for container and volume names)
COMPOSE_PROJECT_NAME=ala

# Build configuration
DOCKER_BUILD_TARGET=production

# Environment selection (development/production)
NODE_ENV=development

# =================================================================
# SERVICE PORT CONFIGURATION
# =================================================================

# Backend API
API_PORT=5000

# Frontend (development uses 3000, production uses 80)
FRONTEND_PORT=3000
FRONTEND_INTERNAL_PORT=3000

# Database
DB_PORT=5432

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Database credentials (override in .env.local for security)
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ala_db_dev

# =================================================================
# FRONTEND CONFIGURATION
# =================================================================

# API URL for frontend (development vs production)
VITE_API_URL=http://localhost:5000/api

# =================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =================================================================

# Enable debug mode in development
DEBUG=ala:*

# Mock Priority API in development
PRIORITY_MOCK=true

# =================================================================
# PRODUCTION-SPECIFIC SETTINGS
# =================================================================

# Logging level for production
LOG_LEVEL=info

# SSL settings for production
ENABLE_SSL=false

# =================================================================
# VOLUME CONFIGURATION
# =================================================================

# Volume name suffixes (automatically prefixed with project name)
POSTGRES_VOLUME_SUFFIX=postgres-data
API_LOGS_VOLUME_SUFFIX=api-logs

# =================================================================
# NOTES
# =================================================================
#
# Environment Loading Order in Docker:
# 1. docker-compose.yml environment section
# 2. env_file directives (this file + environment-specific files)
# 3. docker-compose.override.yml or docker-compose.prod.yml
# 4. .env.local overrides (if mounted)
#
# For local development overrides:
# - Create .env.local in project root with your custom values
# - The setup script can help generate this file
#
# Security Notes:
# - Never commit sensitive production values to this file
# - Use .env.local for personal development overrides
# - Use proper secrets management for production deployments