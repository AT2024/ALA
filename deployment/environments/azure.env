# =================================================================
# ALA Azure Deployment Configuration
# =================================================================
# This file contains Azure-specific deployment variables.
# Use this with Azure deployment scripts.

# =================================================================
# AZURE INFRASTRUCTURE
# =================================================================

# Azure Subscription & Resource Group
AZURE_SUBSCRIPTION_ID=your-subscription-id
RESOURCE_GROUP=ala-resource-group
LOCATION=westeurope

# Container Registry
ACR_NAME=alaregistry
APP_NAME=accountability-log-app

# =================================================================
# AZURE DATABASE CONFIGURATION
# =================================================================

# Azure Database for PostgreSQL
DATABASE_NAME=ala-db
DATABASE_SKU=Basic
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=CHANGE_THIS_FOR_PRODUCTION

# =================================================================
# AZURE APPLICATION SETTINGS
# =================================================================

# Application Configuration for Azure App Service
JWT_SECRET=CHANGE_THIS_FOR_PRODUCTION
PRIORITY_URL=https://t.eu.priority-connect.online/odata/Priority/tabbtbc6.ini/test24
PRIORITY_USERNAME=API
PRIORITY_PASSWORD=CHANGE_THIS_FOR_PRODUCTION

# Azure-specific settings
NODE_ENV=production
ENABLE_SSL=true
LOG_LEVEL=info

# =================================================================
# AZURE DEPLOYMENT SETTINGS
# =================================================================

# Container Image Tags
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# Azure App Service Configuration
APP_SERVICE_PLAN=ala-service-plan
SKU=B1

# Network Security
ALLOWED_ORIGINS=https://accountability-log-app.azurewebsites.net