# =================================================================
# Application Configuration
# =================================================================
NODE_ENV=staging
LOG_LEVEL=info
PORT=5000

# =================================================================
# Database Configuration - Staging
# =================================================================
DB_USER=postgres
DB_PASSWORD=staging_secure_password_123
DATABASE_URL=postgres://postgres:staging_secure_password_123@db:5432/ala_db_staging

# =================================================================
# Priority API Configuration - Staging
# =================================================================
# Use staging or test Priority API endpoints if available
PRIORITY_API_URL=https://t.eu.priority-connect.online/odata/Priority/tabbtbc6.ini/test24
PRIORITY_API_USERNAME=staging_user
PRIORITY_API_PASSWORD=staging_password
PRIORITY_API_TIMEOUT=30000
PRIORITY_MOCK=false

# Additional Priority API settings
VITE_PRIORITY_API_URL=https://t.eu.priority-connect.online/odata/Priority/tabbtbc6.ini/test24

# =================================================================
# Authentication & Security - Staging
# =================================================================
JWT_SECRET=staging_jwt_secret_key_very_long_and_secure_for_medical_app
JWT_EXPIRES_IN=24h

# SMS/Email verification (use staging credentials)
SMS_API_KEY=staging_sms_api_key
EMAIL_API_KEY=staging_email_api_key

# Bypass settings for testing
BYPASS_PRIORITY_EMAILS=test@example.com,alexs@alphatau.com,staging@test.com

# =================================================================
# Feature Flags - Staging
# =================================================================
ENABLE_TEST_DATA=true
ENABLE_DEBUG_LOGGING=true
ENABLE_SWAGGER_UI=true
ENABLE_CORS_ALL_ORIGINS=true

# =================================================================
# Frontend Configuration
# =================================================================
VITE_API_URL=http://localhost:5010/api
VITE_ENVIRONMENT=staging
VITE_OFFLINE_STORAGE=true
VITE_ENABLE_DEVTOOLS=true

# =================================================================
# Testing & Quality Assurance
# =================================================================
# Enable extra logging for testing
DEBUG=ala:staging:*
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true

# Test user configurations
TEST_USER_EMAIL=staging@test.com
TEST_USER_PHONE=+1234567890

# =================================================================
# Monitoring & Health Checks
# =================================================================
HEALTH_CHECK_INTERVAL=15000
HEALTH_CHECK_TIMEOUT=5000

# =================================================================
# File Upload & Storage
# =================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,json,txt

# =================================================================
# Security Settings
# =================================================================
# More permissive for staging testing
CORS_ORIGIN=http://localhost:3010,http://20.217.84.100:3010
SESSION_TIMEOUT=86400000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =================================================================
# External Services (Staging versions)
# =================================================================
# Use staging/test versions of external services
NOTIFICATION_SERVICE_URL=https://staging-notifications.example.com
AUDIT_LOG_SERVICE_URL=https://staging-audit.example.com