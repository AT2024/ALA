{
  "name": "ala-backend",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/server.ts",
    "build": "tsc",
    "lint": "eslint src --ext ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest --testPathPattern=tests/.*\\.(test|spec)\\.(js|ts)$ --testPathIgnorePatterns=tests/integration/",
    "test:integration": "jest --testPathPattern=tests/integration/.*\\.(test|spec)\\.(js|ts)$",
    "test:services": "jest --testPathPattern=tests/services/.*\\.(test|spec)\\.(js|ts)$",
    "test:controllers": "jest --testPathPattern=tests/controllers/.*\\.(test|spec)\\.(js|ts)$",
    "test:models": "jest --testPathPattern=tests/models/.*\\.(test|spec)\\.(js|ts)$",
    "test:priority": "jest --testPathPattern=tests/services/priorityService\\.test\\.(js|ts)$",
    "test:applicator": "jest --testPathPattern=tests/services/applicatorService\\.test\\.(js|ts)$",
    "test:auth": "jest --testPathPattern=tests/controllers/authController\\.test\\.(js|ts)$",
    "test:treatment": "jest --testPathPattern=tests/controllers/treatmentController\\.test\\.(js|ts)$",
    "test:user": "jest --testPathPattern=tests/models/User\\.test\\.(js|ts)$",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:staged": "jest --passWithNoTests --bail --findRelatedTests",
    "test:medical": "jest --testPathPattern=tests/medical/.*\\.test\\.ts$",
    "test:debug": "jest --verbose --no-cache --runInBand",
    "db:init": "ts-node src/dbInit.ts",
    "env:setup": "node ../scripts/setup.js setup",
    "env:validate": "node ../scripts/setup.js validate",
    "env:switch": "node ../scripts/setup.js switch",
    "workflow:feature": "node ../scripts/git-workflow.js feature",
    "workflow:hotfix": "node ../scripts/git-workflow.js hotfix",
    "workflow:release": "node ../scripts/git-workflow.js release",
    "security:scan": "node ../scripts/security-scan.js",
    "debug": "node ../scripts/debug-unified.js",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose up -d --build",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:api": "docker-compose logs -f api"
  },
  "dependencies": {
    "@azure/communication-email": "^1.1.0",
    "archiver": "^7.0.1",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.0",
    "twilio": "^4.11.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.3.1",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.43.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
